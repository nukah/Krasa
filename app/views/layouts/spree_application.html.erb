<html>
<head>
  <title>Krasaonline</title>
  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>	
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" %>
  <%= csrf_meta_tag %>
  <%= hook :head do %>
  	<%= yield :head %>
  <% end %>
</head>
<body class="front">
<table id="wrap" background="<%= asset_path 'layout/fon.png' %>">
	<%= render :partial => 'shared/type_menu' %>
	<tr>
		<td height="60" colspan="3" class="search">
			<%= render :partial => 'shared/search' %>
		</td>
		<td colspan="2" id="dostavka">
			<table width="390" height="51">
	  			<tr>
					<td width="205" height="47" align="right" valign="bottom" style="padding-right: 15px;"><%= image_tag('layout/box.png') %></td>
					<td width="173" style="padding-bottom: 5px; text-decoration: underline; color: #007b89; padding-left: 3px; font-family:'Bitstream Vera Sans Mono',Monaco,Lucida Console'";  align="left" valign="bottom"><strong>Оплата и доставка</strong>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td colspan="5">
			<table border="0" width="100%">
				<tr>
					<% if content_for?(:sidebar)
						 @body_layout = 'sidebar'
						else
						 @body_layout = 'no-sidebar' 
						end
					%>
					<td id="left-sidebar" valign="top" class="<%= @body_layout %>">
						<%= hook :sidebar do %>
		 					<%= yield :sidebar %>
						<% end %>
					</td>
					<td id="center-block">
				 		<%= yield %>
					</td>
					<td width="22%" id="right-sidebar">
						<%= render :partial => "shared/rightbar" %>
					</td>
				</tr>
			</table>
		</td>
	</tr> 
	<tr>
		<td colspan="5">
			<div id="footer-wrap">
			<div id="footer">
			            <div id="copyright">
			                <div class="title">&copy; 2010 <span class="krasa">Krasa</span><span class="online">Online</span> &mdash; Духи с феромонами</div>
			                <div class="phones">(057) 762-81-01<br>(066) 757-08-06</div>
			            </div>
			            <div id="developer">
			                <div id="developer_title"><a target="_blank" href="http://www.s-label.com.ua">Разработка сайта</a> &mdash; интернет компания S-label</div>
			                <!-- <div id="developer_logo"><a target="_blank" href="http://www.s-label.com.ua"><img alt="Интернет компания S-label" src="/sites/all/themes/krasa/img/s-label-logo.png"></a></div> -->
			            </div>
			        </div>
			</div>
		</td>
	</tr>
</table>
</body>
</html>
