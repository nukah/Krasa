<html>
<head>
  <title>Krasaonline</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body class="front">
<table align="center" border="0" cellpadding="0" cellspacing="0" width="982" background="<%= image_path('layout/fon.png') %>" style="background-repeat: repeat-x; background-position:top;">
	<tr class="logo">
		<td rowspan = "2" width="305" height="136px"><a href="index.html"><%= image_tag('layout/logo.png') %></a></td>
		<td width   = "193"><%= link_to image_tag('layout/duxi.png'), set_type_url('duhi') %></td>
		<td width   = "193"><%= link_to image_tag('layout/kosmetika.png'), set_type_url('cosmetika') %></td>
		<td width   = "191"><%= link_to image_tag('layout/parfum.png'), set_type_url('fieromony') %></td>
		<td width   = "200"><%= link_to image_tag('layout/ukrasheniya.png'), set_type_url(4) %></td>
	</tr>

	<tr id="logo">
		<td align="center" class="header1"><span>Духи с феромонами</span></td>
		<td align="center" class="header"><span>Косметика</span></td>
		<td align="center" class="header"><span>Парфюмерия</span></td>
		<td align="center" class="header"><span>Украшения</span></td>
	</tr>
	<tr id="logo">
		<td height="60" colspan="3" class="search">
			<span style="float:left; padding-top: 12px;">Поиск:</span>
			<%= image_tag('layout/search.png', :size => "541x24", :class => "searchfield") %><%= image_tag('layout/search_button.png') %>
		</td>
		<td colspan="2" id="dostavka">
			<table width="390" height="51">
	  			<tr>
					<td width="205" height="47" align="right" valign="bottom" style="padding-right: 15px;"><%= image_tag('layout/box.png') %></td>
					<td width="173" style="padding-bottom: 5px; text-decoration: underline; color: #007b89; padding-left: 3px; font-family:'Bitstream Vera Sans Mono',Monaco,Lucida Console'";  align="left" valign="bottom"><strong>Оплата и доставка</strong>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td colspan="5" height="20" valign="center">
			<span class="primer">Например,</span>
			<span style="color: #007b89; text-decoration: underline">феромон мужской</span>
		</td>
	</tr>
	<tr>
		<td colspan="5">
			<table border="0" width="100%">
				<tr>
					<td width="24%" id="left-sidebar" valign="top">
						<%= hook :sidebar do %>
		 					<%= yield :sidebar %>
						<% end %>
					</td>
					<td width="54%" valign="top" align="center" id="content">
				 		<%= yield %>
					</td>
					<td width="22%" id="right-sidebar">
						<%= render :partial => "shared/rightbar" %>
					</td>
				</tr>
			</table>
		</td>
	</tr> 
	<tr>
		<td colspan="5">
			<table width="100%" background="<%= image_path('layout/fonfooter.png') %>">
				<tr>
					<td width="29%" id="footer">© 2010
						<span id="footer1">Krasa</span>
						<span id="footer2">Online</span> — Духи с феромонами
						<br />
						<span id="footer-phone">(057) 762-81-01</span>
						<br />
						<span id="footer-phone">(066) 757-08-06</span>
					</td>
					<td colspan="3" id="footer" valign="top" align="right">
						<br />
						<span id="footer-right">Разработка сайта — Интернет-компания
							<br />
						</span>
					</td>
					<td width="14%" align="left"><%= image_tag('layout/logotype.png') %></td>
				</tr>
			</table>
		</td>
	</tr>
</table>
</body>
</html>
